
public class trapezio {

	public static void main(String[] args) {
		
		double b, B, h, area;
		
		b = 6.0;
		B = 8.0;
		h = 5.0;
		
		area = (b + B) / 2.0 * h;
		
		System.out.println(area);
		
		int aa, bb;
		double resultado;
		
		aa = 5;
		bb = 2;
		
		resultado = (double) aa / bb;
		
		System.out.println(resultado);
		
		double aaa;
		int bbb;
		
		aaa = 5.0;
		bbb = (int) aaa;
		
		System.out.println(b);
		

	}

}
